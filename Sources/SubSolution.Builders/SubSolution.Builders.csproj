<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <Description>Library used to build solutions from SubSolution configurations (.subsln files).</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="5.0.0" />
    <PackageReference Include="XObjectsCore" Version="3.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SubSolution\SubSolution.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="SubSolutionConfiguration.xsd">
      <SubType>Designer</SubType>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
    
  <!-- Inspired from:  https://gist.github.com/KirillOsenkov/f20cb84d37a89b01db63f8aafe03f19b -->
  <Target Name="GenerateCSharpFromXsd" BeforeTargets="BeforeCompile;CoreCompile"
          Inputs="$(MSBuildAllProjects)" Outputs="$(IntermediateOutputPath)SubSolutionConfiguration.xsd.cs">
    <PropertyGroup>
      <GeneratedFilePath>$(IntermediateOutputPath)SubSolutionConfiguration.xsd.cs</GeneratedFilePath>
    </PropertyGroup>
      <ItemGroup>
          <Compile Include="$(GeneratedFilePath)" />
          <FileWrites Include="$(GeneratedFilePath)" />
      </ItemGroup>
      <Message Importance="high" Text="dotnet tool run LinqToXsd gen &quot;$(ProjectDir)SubSolutonConfiguration.xsd&quot; -c &quot;$(ProjectDir)SubSolutionConfiguration.xsd.config&quot; -o &quot;$(ProjectDir)$(GeneratedFilePath)&quot;" />
      <Exec LogStandardErrorAsError="true" StandardOutputImportance="high" StandardErrorImportance="high" Command="dotnet tool restore" />
      <Exec LogStandardErrorAsError="true" StandardOutputImportance="high" StandardErrorImportance="high" Command="dotnet tool list" />
      <Exec LogStandardErrorAsError="true" StandardOutputImportance="high" StandardErrorImportance="high" Command="dotnet tool run LinqToXsd" />
      <Exec LogStandardErrorAsError="true" StandardOutputImportance="high" StandardErrorImportance="high" Command="dotnet tool run LinqToXsd gen &quot;$(ProjectDir)SubSolutonConfiguration.xsd&quot; -c &quot;$(ProjectDir)SubSolutionConfiguration.xsd.config&quot; -o &quot;$(ProjectDir)$(GeneratedFilePath)&quot;" />
  </Target>

</Project>
