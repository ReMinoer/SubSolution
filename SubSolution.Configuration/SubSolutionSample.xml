<?xml version="1.0" encoding="utf-8"?>
<SubSolutionConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                          xsi:noNamespaceSchemaLocation="SubSolutionConfiguration.xsd">
    <Root RemoveUniqueItemFolders="true"
          CollapseEmptyFolders="true"
          ConflictProjectsOutputDirectory=".Conflicts">
        <Folder Name="FolderName"
                RemoveUniqueItemFolders="true"
                CollapseEmptyFolders="true">
            <SubSolutions CreateRootFolder="true" CreateFolders="true">
                <WhereProjects>
                    <ProjectMatchAnyOf>
                        <ProjectPath Match="**/*.custom.csproj" />
                        <ProjectMatchAll>
                            <ProjectNot>
                                <ProjectPath Match="**/*.custom.csproj" />
                            </ProjectNot>
                            <ProjectPath Match="**/*.custom.csproj" />
                        </ProjectMatchAll>
                    </ProjectMatchAnyOf>
                </WhereProjects>
            </SubSolutions>
            <Projects Path="MyApplication.csproj" Id="Application" />
            <Dependencies Target="Application">
                <Where>
                    <ProjectPath Match="**/*.Tests.csproj" />
                </Where>
            </Dependencies>
        </Folder>
        <SubSolutions CreateRootFolder="true" CreateFolders="true" />
        <Projects />
    </Root>
    <Configurations>
        <Configuration Name="Debug">
            <ProjectConfiguration Match="Debug" />
        </Configuration>
        <Configuration Name="Release">
            <ProjectConfiguration Match="Release" />
        </Configuration>
    </Configurations>
    <Platforms>
        <Platform Name="Any CPU">
            <ProjectPlatform Match="Any" />
        </Platform>
        <Platform Name="x86">
            <ProjectPlatform Match="86" />
            <ProjectPlatform Match="32" />
            <ProjectPlatform Match="Any" />
        </Platform>
        <Platform Name="x64">
            <ProjectPlatform Match="64" />
            <ProjectPlatform Match="Any" />
        </Platform>
    </Platforms>
</SubSolutionConfiguration>